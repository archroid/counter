<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/White</item>
        <item name="android:statusBarColor">@color/White</item>
        <item name="fontFamily">@font/googlesans</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/White</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>


    <style name="GradientTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/Blue2</item>
        <item name="colorAccent">@color/Blue3</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/White</item>
        <item name="android:windowBackground">@drawable/s_topbar_1</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="fontFamily">@font/googlesans</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>



    <style name="loginRegisterTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/LightestGray</item>
        <item name="android:statusBarColor">@color/LightestGray</item>
        <item name="fontFamily">@font/googlesans</item>
    </style>



    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

</resources>
